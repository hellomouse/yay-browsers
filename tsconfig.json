{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node18",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "composite": true,
    "lib": [
      "esnext"
    ],
    "outDir": "build"
  },
  "exclude": [
    "node_modules/",
    "build/"
  ],
  "include": [
    "bin",
    "lib"
  ]
}
